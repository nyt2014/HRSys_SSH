<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="cn.nyt.bean">
	<class name="Administrator" table="t_admin">
		<id name="id">
			<generator class="native"/>
		</id>
		<property name="adminName" type="string" column="adminName" length="20" not-null="true"/>
		<property name="pwd" length="10" not-null="true"></property>
		
	</class>	

</hibernate-mapping>